#!/usr/bin/env python
"""
Executable for simulating the survey.
"""
import os
import ephem

from maglites.utils.ortho import datestring
from maglites.scheduler import Scheduler
from maglites.utils.parser import Parser

def main():
    parser = Scheduler.parser()
    args = parser.parse_args()

    start = ephem.Date(args.utc_start) if args.utc_start else ephem.now()
    print args.utc_start
    print datestring(start), start
    print float(start)
    end = start + args.chunk*ephem.minute
    print datestring(start),datestring(end)
    scheduler = Scheduler(args.fields,args.windows,args.complete)
    scheduler.run(start,end,plot=args.plot)

    outfile = args.outfile
    if not outfile:
        outfile = str(start).replace(' ','_').replace(':','.')+'.json'

    scheduler.scheduled_fields.write(outfile)

if __name__ == "__main__":
    main()
